<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1D1D"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#454545"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CRUD ProPeople"
            android:textColor="#E4E4E4"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            app:srcCompat="@drawable/logoprop" />

        <EditText
            android:id="@+id/etCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Codigo Producto"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Captura Descripcion"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Captura Ubicacion"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etExistencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Captura Existencias"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnAlta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#939393"
            android:onClick="altaProducto"
            android:text="Registrar nuevo producto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnConsulta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#939393"
            android:onClick="consultaProducto"
            android:text="Consulta por codigo de producto"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#939393"
            android:onClick="eliminarProducto"
            android:text="Eliminar Producto por codigo"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#939393"
            android:onClick="modificarProductos"
            android:text="Editar registro de producto"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>